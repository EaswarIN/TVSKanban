    td = tr.insertCell(tdEle);      
    td.appendChild(ele); 

    ele = document.createElement('input');
    setAttributes(ele, {"id":"safetyStock", "type": "number", "value": "0","class": "form-control form-control-sm text-right w80 safety-stock", "name":"trn_prod_plan_header[schedule][0][safety_stock]","min":"0"});
    td = tr.insertCell(tdEle);      
    td.appendChild(ele);  

    ele = document.createElement('input');
