    ele = document.createElement('input');
    setAttributes(ele, {"type":"hidden","id":"reorder_point",  "value": "0","class": "form-control form-control-sm text-right w80", "name":"trn_prod_plan_header[schedule][0][re_order_point]" }); 
    td.appendChild(ele); 
 
