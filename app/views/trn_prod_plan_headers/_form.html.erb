    td = tr.insertCell(tdEle);
    td.appendChild(ele);  


    var ele = document.createElement('input');
    setAttributes(ele, {"id":"sap_plan_order", "class": "form-control form-control-sm text-right w120", "name":"trn_prod_plan_header[schedule][0][sap_plan_order]","min":"0"});
    td = tr.insertCell(tdEle);
    td.appendChild(ele);  
 

