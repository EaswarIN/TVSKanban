    setAttributes(ele, {"id":"lot_size",  "value": "0","class": " form-control form-control-sm text-right w80 lot-size", "type": "number", "name":"trn_prod_plan_header[schedule][0][lot_size]","required":"true","min":"0"});
    td = tr.insertCell(tdEle);      
    td.appendChild(ele); 

